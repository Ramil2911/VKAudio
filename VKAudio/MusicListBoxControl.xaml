<UserControl x:Class="VK.MusicListBoxControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:VK"
             mc:Ignorable="d" d:DesignWidth="285" Height="45">
    <Grid>
        <TextBlock x:Name="TRACK_NAME" HorizontalAlignment="Left" Margin="10,1,0,0" Text="TRACK_NAME" TextWrapping="NoWrap" VerticalAlignment="Top" Foreground="White" Width="190" FontSize="16" TextTrimming="CharacterEllipsis" />
        <TextBlock x:Name="TRACK_AUTHOR" HorizontalAlignment="Left" Margin="10,27,0,0" Text="TRACK_AUTHOR" TextWrapping="NoWrap" VerticalAlignment="Top" Foreground="White" Width="190" TextTrimming="CharacterEllipsis" />
        <Button x:Name="Play" Content="Play" HorizontalAlignment="Left" Margin="255,0,0,0" VerticalAlignment="Center" Click="Play_Click" />
        <TextBlock x:Name="IsHQ" HorizontalAlignment="Left" Margin="232,4,0,0" Text="HQ" TextWrapping="Wrap" VerticalAlignment="Top" Foreground="White" Visibility="Visible" />
        <TextBlock x:Name="TRACK_DURATION" HorizontalAlignment="Left" Margin="220,25,0,0" Text="9:99" TextWrapping="Wrap" VerticalAlignment="Top" Foreground="White" Width="30" TextAlignment="Right"/>
    </Grid>
</UserControl>